<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab12.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="input" onAction="#submit" promptText="Enter name">
      <font>
         <Font name="Comic Sans MS" size="12.0" />
      </font>
   </TextField>
   <TextField fx:id="inputNum" onAction="#submit" promptText="Enter age">
      <font>
         <Font name="Comic Sans MS" size="12.0" />
      </font>
   </TextField>
   <Label fx:id="label" text="" textAlignment="CENTER">
      <font>
         <Font name="Comic Sans MS" size="12.0" />
      </font>
   </Label>
    <Button onAction="#submit" text="SUBMIT">
      <font>
         <Font name="Comic Sans MS" size="12.0" />
      </font></Button>
</VBox>
